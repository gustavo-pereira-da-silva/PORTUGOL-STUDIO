programa
{
	
	funcao inicio()
	{
                inteiro contador=0
                cadeia  cesta[][]={{"pera","100"},{"maça","300"},{"uva","450"},{"jamelao","400"}}

                faca{
                	escreva("produto : " + cesta[contador][0]  + " Quantidade : " + cesta[contador][1] + "\n")
             	     contador++
                } enquanto(contador<=3)
                
                
	

	}
}
