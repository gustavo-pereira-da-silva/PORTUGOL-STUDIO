programa
{
	
	funcao inicio()
	{
	     //PROGRAMAÇAO DE GUSTAVO PEREIRA 
	     
         //Fassa um programa que some todas as notas e mostre a media total.
	
          real nota1,nota2,nota3,nota4,media
          cadeia nome
	     escreva("Escreva o nome do Aluno(A): ")
	     leia(nome)
	     limpa()
		escreva("insira as 4 notas dos 4 bimestre.\n")
           
          escreva("nota 1: ")
          leia(nota1)
          escreva("nota 2: ")
          leia(nota2)
          escreva("nota 3: ")
          leia(nota3)
          escreva("nota 4: ")
          leia(nota4)

          media = (nota1+nota2+nota3+nota4)/4

          se(media>=7){
            escreva("APROVADO!!")
          }
          senao{
            escreva("REPROVADO")
          }
            escreva("\nA media total do Aluno(A):"+nome+" = "+media)
          
	}
}
